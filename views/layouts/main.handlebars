<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous" />
    <title>The Valley Tech Blog</title>
</head>

<body>
    <!-- NAVBAR -->
    <div class="container-fluid">
        <nav class="d-flex flex-wrap justify-content-center align-items-center mt-5 mb-5 mx-4">
            <!-- To "Home" -->
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                <span class="text-uppercase text-muted fs-1 bg-white">The Valley Tech Blog</span>
            </a>

            <ul class="nav fs-4 text-muted">
                <li class="nav-item text-dark text-uppercase"><a href="/" class="nav-link activen text-dark text-muted"
                        aria-current="page">Home</a></li>
                {{#if logged_in}}
                <li class="nav-item text-uppercase"><a href="/profile" class="nav-link text-dark text-muted">Profile</a>
                </li>
                <li class="nav-item text-uppercase"><a id="logout" href="#"
                        class="nav-link text-dark text-muted">Logout</a></li>
                {{else}}
                <li class="nav-item text-uppercase"><a href="/login" class="nav-link text-dark text-muted">Login</a>
                </li>
                {{/if}}
            </ul>
        </nav>
    </div>
    <main class="background">
        {{{body}}}
    </main>
    <!-- FOOTER -->
    <footer class="text-center text-lg-start bg-white text-muted">
       
    </footer>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
</body>

</html>